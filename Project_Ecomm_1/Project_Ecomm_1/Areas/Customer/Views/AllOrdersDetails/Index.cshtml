@model Project_Ecomm_1.ViewModels.OrdersVM


<h2 class="text-primary text-center "> Product You Previously Picked </h2>

<div class="row">
    <table class="table table-bordered table-active table-striped">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Image</th>


            </tr>
        </thead>

        <tbody>

            @foreach (var list in Model.listOrder)
            {
                <tr>
                    <td>@list.Product.Title</td>
                    <td>@list.Count</td>
                    <td width="30%"><img src="@list.Product.ImageUrl" width="100%" height="150px" /></td>

                </tr>
            }


        </tbody>
    </table>

</div>