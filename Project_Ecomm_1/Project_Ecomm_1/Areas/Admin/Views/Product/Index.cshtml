<div class="row">
    <div class="col-9">
        <h2 class=" text-primary">Product List</h2>
    </div>
    <div class="col-3">
        <a asp-action="Upsert"class="btn btn-info form-control">
            <i class=" fas fa-plus">&nbsp;Add New Product</i>
        </a>
    </div>
</div>
<div class="container rounded border p-2 m-2">
    <table id="tblData" class="table table-bordered table-striped table-active">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>ISBN</th>
                <th>Author</th>
                <th>Price</th>
                <th>Action</th>
            </tr>
        </thead>
    </table>
</div>
