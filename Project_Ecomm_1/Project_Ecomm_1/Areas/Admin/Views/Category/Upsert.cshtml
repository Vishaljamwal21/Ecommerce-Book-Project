@model Project_Ecomm_1.Models.Category
@{
    ViewData["Title"] = "Upsert";
    var title = Model.Id != 0 ? "Edit Category" : "New Category";
    var saveUpdate = Model.Id != 0 ? "Update" : "save";
}
<form method="post">
    <div class="row">
        <div class="col-10 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8">
            <div class="form-group row p-2 m-2">
                <div class="col-4">
                    <label asp-for="@Model.Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="@Model.Name" class="form-control">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
            </div>
           @* <div class="form-group row p-2 m-2">
                <div class="col-4 offset-4">
                    <a asp-action="Index" class="btn btn-success form-control">Back To List</a>
                </div>
                <div class="col-4">
                    <button type="submit" class="btn btn-info form-control">@saveUpdate</button>
                </div>
            </div>*@
            <div class="form-group row p-2 m-2">
                <div class="col-8 offset-4">
                    @if (Model.Id != 0)
                    {
                        <partial name="_editandbacktolistbutton"/>
                    }
                    else
                    {
                        <partial name="_createandbacktolistbutton"/>
                    }
                </div>
               
            </div>
        </div>

    </div>
   
</form>
@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}


